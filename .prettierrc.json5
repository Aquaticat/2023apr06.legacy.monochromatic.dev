{
  printWidth: 90,

  semi: true,

  singleQuote: true,

  quoteProps: "consistent",

  trailingComma: "all",

  bracketSameLine: true,

  requirePragma: true,
  insertPragma: true,

  embeddedLanguageFormatting: "off",

  singleAttributePerLine: true,

  overrides: [
    {
      files: [
        "*.html",
        "*.json",
        "*.json5"
      ],
      options: {
        singleQuote: false
      }
    },
    {
      files: [
        "*.js",
        "*.ts"
      ],
      options: {
        // Handled by Eslint 'quote-props': ['error', 'consistent-as-needed']
        quoteProps: "preserve"
      }
    }
  ]
}
