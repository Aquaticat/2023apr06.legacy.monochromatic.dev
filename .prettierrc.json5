{
  printWidth: 90,
  semi: true,
  singleQuote: true,
  trailingComma: "all",
  bracketSameLine: true,

  requirePragma: true,
  insertPragma: true,

  embeddedLanguageFormatting: "off",

  singleAttributePerLine: true,

  overrides: [
    {
      files: [
        "*.html",
        "*.json",
        "*.json5"
      ],
      options: {
        singleQuote: false
      }
    },
  ]
}
